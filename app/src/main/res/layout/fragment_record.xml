<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/record_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/record_type_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/record_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/record_type_iv"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="16sp"/>
        
        <Spinner
            android:id="@+id/currency_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/record_top_layout"
        android:background="#E6E6E6"/>

    <RelativeLayout
        android:id="@+id/record_beizhu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:padding="10dp">
        <TextView
            android:id="@+id/record_beizhu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/record_beizhu_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/record_beizhu_tv"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:hint="请输入备注信息"/>
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/record_beizhu_layout"
        android:background="#E6E6E6"/>

    <RelativeLayout
        android:id="@+id/record_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:padding="10dp">
        <TextView
            android:id="@+id/record_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/record_time_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/record_time_tv"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/record_time_layout"
        android:background="#E6E6E6"/>

    <GridView
        android:id="@+id/record_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line3"
        android:layout_above="@id/record_hsv"
        android:padding="5dp"
        android:numColumns="5"/>

    <HorizontalScrollView
        android:id="@+id/record_hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.hui.tally.utils.KeyboardView
            android:id="@+id/record_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>
</RelativeLayout> 